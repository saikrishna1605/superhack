{
  "version": 2,
  "buildCommand": "cd services/ui && npm install && npm run build",
  "outputDirectory": "services/ui/build",
  "builds": [
    {
      "src": "services/api/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "services/api/main.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*\\..+)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
